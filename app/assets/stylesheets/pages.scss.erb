header{
  // position: fixed;
  margin-top: 0;
  background: linear-gradient(-90deg, #50555a, #0c0c0c);
  box-shadow: 4px 4px 4px rgba(0,0,0,0.6);
  h1{
    font-size: 70px;
    color: #ffffff;
    margin-top: 0px;
    margin-bottom: 0px;
  }
}

.container{
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 0.05fr 1fr;
  grid-column-gap: 20px;
  
  h2{
    font-size: 20px;
    margin-top: 0px;
    margin-bottom: 0px;

  }
}

.main-panel{
  h1{
    box-shadow: 2px 2px 2px rgba(0,0,0,0.6);
    margin-top: 0px;
    color: #FFFFFF;
    background: linear-gradient(-90deg, #50555a, #0c0c0c);
  }

}

.proceedings-list{
  h1{
    box-shadow: 2px 2px 2px rgba(0,0,0,0.6);
    margin-top: 0px;
    color: #FFFFFF;
    background: linear-gradient(-90deg, #50555a, #0c0c0c);
  }
}

.article-title{
  font-size: 25px;
}

.article-content{
  color: #414141;
  font-family: 'Lato', 'Noto Sans JP', 'ヒラギノ角ゴ ProN', 'Hiragino Kaku Gothic ProN', 
  'メイリオ', Meiryo, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
}

.think-list{
  display: grid;
  grid-template-columns: 0.15fr 1fr;
}

.think-content{
  border: solid 2px;
  border-radius: 5px;
  border-color: #cccccc;
  margin-top: auto;
  margin-bottom: auto;
}

.control-container{
  display: grid;
  grid-template-columns: 1fr 1fr;
}

.profile{
  p{
    margin-top: 5px;
    margin-bottom: 5px;
    font-size: 22px;
    letter-spacing: 1.5px;
    font-family: 'Lato', 'Noto Sans JP', 'ヒラギノ角ゴ ProN', 'Hiragino Kaku Gothic ProN', 
    'メイリオ', Meiryo, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
  }

  img{
    border-radius: 50%;
    padding: 5px;
    border: 3px solid #222222;
  }
}

.prof-img{
  margin-right: auto;
  margin-left: auto;
  margin-top: 5px;
  margin-bottom: 0px;
  img{
    border-radius: 50%;
    padding: 5px;
    border: 18px solid #222222;
  }
}
